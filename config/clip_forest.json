{
  "seed": 42,
  "output_dir": "runs/clip_forest",

  "dataset": {
    "root": "../data/image_text",
    "im_size": 128,
    "im_channels": 3,
    "caption_keys": ["caption", "text"]
  },

  "train": {
    "batch_size": 32,
    "num_workers": 4,
    "epochs": 20,
    "lr": 1e-4,
    "weight_decay": 1e-2,
    "max_text_len": 64,
    "log_interval": 50,
    "save_every": 1
  },

  "model": {
    "embed_dim": 512,

    "img_encoder": {
      "img_size": 128,
      "patch_size": 8,
      "in_chans": 3,
      "embed_dim": 512,
      "depth": 6,
      "num_heads": 8
    },

    "txt_encoder": {
      "embed_dim": 512,
      "max_len": 64,
      "depth": 6,
      "num_heads": 8
    },

    "tokenizer_name": "bert-base-uncased"
  }
}
